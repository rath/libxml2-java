CC=       @CXX@
OBJS=     libxml.o document.o node.o utils.o xpath_ctx.o xpath_expr.o
CFLAGS=   @CFLAGS@ @CFLAGS_XML2@ @JDK_INC_DIRS@ -g -O0 -fPIC
LDFLAGS=  @LIBS_XML2@
JNILIB=   @JNILIB@

all: $(JNILIB)

$(JNILIB): $(OBJS)
	$(CC) @FLAG_SHLIB@ -o $@ $(OBJS) $(LDFLAGS)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)
	rm -f $(JNILIB)

.PHONY: all clean
